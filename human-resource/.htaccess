# Human Resource Directory .htaccess
# Handle all error types for this subdirectory

# Enable URL rewriting
RewriteEngine On

# Handle all error types
ErrorDocument 400 /seait/404.php
ErrorDocument 401 /seait/404.php
ErrorDocument 403 /seait/404.php
ErrorDocument 404 /seait/404.php
ErrorDocument 408 /seait/404.php
ErrorDocument 429 /seait/404.php
ErrorDocument 500 /seait/505.php
ErrorDocument 502 /seait/505.php
ErrorDocument 503 /seait/505.php
ErrorDocument 504 /seait/505.php
ErrorDocument 505 /seait/505.php

# Force error pages to be displayed
php_flag display_errors on
php_flag log_errors on

# Custom error handling for PHP errors
php_value error_reporting E_ALL

# Additional security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>
